{
  "manifest_version": 3,
  "name": "CRM Copier",
  "version": "1.1",
  "description": "Extracts CRM data and enriches with ASC details from pincode map.",
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["pincode_map.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CRM Copier"
  }
}
